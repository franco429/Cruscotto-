{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx index.ts",
    "build": "npm run build-worker && npx esbuild index.ts backup-service.ts --platform=node --packages=external --bundle --format=esm --outdir=dist && npm run verify-build",
    "start": "cross-env NODE_ENV=production node --max-old-space-size=2048 --max-semi-space-size=512 dist/index.js",
    "check-env": "tsx verify-env.ts",
    "verify:env": "tsx verify-env.ts",
    "test-email": "node test-email.js",
    "check": "tsc",
    "test": "vitest",
    "test:run": "vitest run",
    "build-worker": "esbuild backup-worker.ts --platform=node --bundle --format=cjs --outfile=dist/backup-worker.cjs",
    "verify-build": "node -e \"const fs = require('fs'); const path = require('path'); const workerPath = path.join('dist', 'backup-worker.cjs'); if (!fs.existsSync(workerPath)) { console.error(' File backup-worker.cjs non trovato in dist/'); process.exit(1); } else { console.log(' File backup-worker.cjs trovato correttamente'); }\"",
    "fix-obsolete": "tsx scripts/fix-obsolete-documents.ts",
    "test-obsolete": "tsx scripts/test-obsolete-fix.ts",
    "test-deletion": "tsx scripts/test-document-deletion.ts"
  },
  "dependencies": {
    "@google-cloud/local-auth": "^3.0.1",
    "@types/qrcode": "^1.5.6",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "connect-mongodb-session": "^5.0.0",
    "cors": "^2.8.5",
    "cron": "^4.3.3",
    "cross-env": "^10.1.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "esbuild": "^0.25.11",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "gaxios": "^7.1.2",
    "googleapis": "^164.1.0",
    "helmet": "^8.1.0",
    "memorystore": "^1.6.7",
    "mongodb": "^6.20.0",
    "mongoose": "^8.19.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "otplib": "^12.0.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "qrcode": "^1.5.4",
    "react-hot-toast": "^2.6.0",
    "ts-node": "^10.9.2",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.4",
    "@types/express-session": "^1.18.2",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.9.1",
    "@types/nodemailer": "^7.0.3",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "@types/uuid": "^11.0.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.3",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.3"
  }
}
