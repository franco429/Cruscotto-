{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx index.ts",
    "build": "npm run build-worker && npx esbuild index.ts backup-service.ts --platform=node --packages=external --bundle --format=esm --outdir=dist && npm run verify-build",
    "start": "NODE_ENV=production node dist/index.js",
    "check-env": "tsx verify-env.ts",
    "verify:env": "tsx verify-env.ts",
    "test-email": "node test-email.js",
    "check": "tsc",
    "test": "vitest",
    "test:run": "vitest run",
    "build-worker": "esbuild backup-worker.ts --platform=node --bundle --format=cjs --outfile=dist/backup-worker.cjs",
    "verify-build": "node -e \"const fs = require('fs'); const path = require('path'); const workerPath = path.join('dist', 'backup-worker.cjs'); if (!fs.existsSync(workerPath)) { console.error('❌ File backup-worker.cjs non trovato in dist/'); process.exit(1); } else { console.log('✅ File backup-worker.cjs trovato correttamente'); }\""
  },
  "dependencies": {
    "@google-cloud/local-auth": "^3.0.1",
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.2",
    "connect-mongodb-session": "^5.0.0",
    "cors": "^2.8.5",
    "cron": "^3.1.7",
    "cross-env": "^7.0.3",
    "csurf": "^1.11.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "esbuild": "^0.25.0",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.0",
    "express-validator": "^7.1.0",
    "gaxios": "^7.1.1",
    "googleapis": "^105.0.0",
    "helmet": "^8.1.0",
    "memorystore": "^1.6.7",
    "mongodb": "^6.17.0",
    "mongoose": "^8.16.0",
    "multer": "^2.0.2",
    "nodemailer": "^6.10.1",
    "otplib": "^12.0.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "react-hot-toast": "^2.5.2",
    "ts-node": "^10.9.2",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/mongoose": "^5.11.96",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.16.11",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "@vitest/coverage-v8": "^2.1.9",
    "supertest": "^7.1.1",
    "tsx": "^4.19.4",
    "typescript": "^5.4.5",
    "vitest": "^2.1.9"
  }
}
